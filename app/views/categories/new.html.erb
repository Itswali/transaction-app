<h1>Add a New Category</h1>

<%= form_with model: @category, url: categories_path, local: true do |form| %>
  <div class="form_header">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :icon %>
    <%= form.text_field :icon, placeholder: 'Icon URL' %>
  </div>

  <div class=""actions >
  <%= form.submit 'Create Category' %>
  </div>
<% end %>
